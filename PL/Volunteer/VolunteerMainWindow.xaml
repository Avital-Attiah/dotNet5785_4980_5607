<Window x:Class="PL.Volunteer.VolunteerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="מסך מתנדב ראשי" Height="650" Width="700"
        FlowDirection="RightToLeft" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- פרטי מתנדב -->
        <StackPanel Margin="0 0 0 20">
            <TextBlock Text="פרטי מתנדב" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Content="ת.ז:" Width="120"/>
                <TextBox x:Name="txtId" Width="150" IsReadOnly="True" Text="{Binding Id}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Content="שם מלא:" Width="120"/>
                <TextBox Width="200" Text="{Binding FullName}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Content="טלפון:" Width="120"/>
                <TextBox Width="150" Text="{Binding Phone}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Content="דוא-ל:" Width="120"/>
                <TextBox Width="200" Text="{Binding Email}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Content="כתובת:" Width="120"/>
                <TextBox Width="300" Text="{Binding Address}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Content="מרחק מרבי:" Width="120"/>
                <TextBox Width="100" Text="{Binding MaxCallDistance}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Content="תפקיד:" Width="120"/>
                <TextBox x:Name="txtRole" Width="150" IsReadOnly="True" Text="{Binding Role}"/>
            </StackPanel>

            <CheckBox x:Name="chkIsActive" Content="פעיל" Margin="0 10"/>
            <Button x:Name="btnUpdate" Content="עדכן פרטים" Width="120" Click="btnUpdate_Click" Margin="0 10"/>
        </StackPanel>

        <!-- קריאה בטיפול + מפה -->
        <GroupBox Header="קריאה בטיפול" Grid.Row="1" Height="500">
            <DockPanel Margin="10">
                <StackPanel DockPanel.Dock="Top">
                    <TextBox x:Name="txtCallDetails" Height="100" IsReadOnly="True" TextWrapping="Wrap" Margin="0 0 0 10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnSelectCall" Content="בחירת קריאה" Width="110" Margin="5" Click="btnSelectCall_Click"/>
                        <Button x:Name="btnFinishCall" Content="סיום טיפול" Width="110" Margin="5" Click="btnFinishCall_Click"/>
                        <Button x:Name="btnCancelCall" Content="ביטול טיפול" Width="110" Margin="5" Click="btnCancelCall_Click"/>
                        <Button x:Name="btnCallHistory" Content="היסטוריית קריאות" Width="130" Margin="5" Click="btnCallHistory_Click"/>
                        <Button x:Name="btnClose" Content="סגור" Width="80" Margin="5" Click="btnClose_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- המפה תופיע מתחת לכפתורים -->
                <WebBrowser x:Name="MapBrowser" Height="250" Margin="0,10,0,0"/>
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
