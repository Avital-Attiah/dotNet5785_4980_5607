<Window x:Class="PL.Volunteer.UpdateAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="עדכון כתובת" Height="200" Width="400"
        Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="כתובת חדשה:" Margin="0,0,0,5"/>

            <TextBox x:Name="txtNewAddress"
                     Height="25"
                     Margin="0,0,0,10"
                     Background="White"
                     BorderBrush="#A7D8F0"
                     BorderThickness="1"/>

            <Button Content="עדכן כתובת"
                    Click="btnUpdateAddress_Click"
                    Width="100"
                    HorizontalAlignment="Left" Background="White"
BorderBrush="#A7D8F0"
BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Window>
