<Window x:Class="PL.Volunteer.VolunteerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL.Volunteer"
        Title="Volunteer List" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Loaded="VolunteerListWindow_Loaded"
        Closed="VolunteerListWindow_Closed">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- ComboBox row -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Text="Volunteers" FontSize="20" FontWeight="Bold" Grid.Row="0"/>

        <!-- ComboBox לסינון לפי CallType -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Filter by Call Type:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Width="150"
                      ItemsSource="{Binding Source={StaticResource CallTypesCollectionKey}}"
                      SelectedValue="{Binding SelectedCallType, Mode=TwoWay}"
                      SelectionChanged="ComboBox_SelectionChanged"
                      HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- ListView המציגה את רשימת המתנדבים -->
        <ListView Grid.Row="2" Margin="5"
                  ItemsSource="{Binding VolunteerList}" SelectedItem="{Binding SelectedVolunteer}" MouseDoubleClick="lsvCoursesList_MouseDoubleClick">

        <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID"                DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name"              DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Active"            DisplayMemberBinding="{Binding IsActive}"/>
                    <GridViewColumn Header="Handled Calls"     DisplayMemberBinding="{Binding TotalHandledCalls}"/>
                    <GridViewColumn Header="Canceled Calls"    DisplayMemberBinding="{Binding TotalCanceledCalls}"/>
                    <GridViewColumn Header="Expired Calls"     DisplayMemberBinding="{Binding TotalExpiredCalls}"/>
                    <GridViewColumn Header="Current Call ID"   DisplayMemberBinding="{Binding CurrentCallId}"/>
                    <GridViewColumn Header="Current Call Type" DisplayMemberBinding="{Binding CurrentCallType}"/>
                    <GridViewColumn Header="Actions" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"
                                        Padding="2"
                                        Click="DeleteButton_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- כפתור חזרה -->
        <Button Grid.Row="3" Content="Back" Grid.Column="7" Width="100"
                HorizontalAlignment="Left" Margin="0,10,0,0"
                Click="btnBack_Click"/>
        
        <Button Grid.Row="3" Content="Add" Width="100"
        HorizontalAlignment="Left" Margin="146,10,0,0"
        Click="btnAdd_Click"/>
    </Grid>
</Window>
