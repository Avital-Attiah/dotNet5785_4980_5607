<Window x:Class="PL.Volunteer.VolunteerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="ניהול מתנדבים"
        Height="600" Width="900"
        Background="#E8F6FF"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <!-- ==================== משאבים (Window.Resources) ==================== -->
    <Window.Resources>
        <!-- מקור ערכי enum עבור CallType -->
        <local:CallTypesCollection x:Key="CallTypesSource"/>
        <!-- מקור ערכי enum עבור VolunteerInLIstFields -->
        <local:VolunteerInLIstFieldsCollection x:Key="SortFieldsSource"/>
    </Window.Resources>

    <Border CornerRadius="15"
            BorderBrush="#007ACC"
            BorderThickness="2"
            Background="White"
            Padding="20"
            Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- עמודה שמאלית צרה יותר לסינון + מיון -->
                <ColumnDefinition Width="200"/>
                <!-- עמודת תכולה רחבה יותר לטבלה -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!-- שורה עיקרית: סינון + טבלה -->
                <RowDefinition Height="*"/>
                <!-- שורה תחתונה: כפתורים -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ================= (A) סינון + מיון בעמודה שמאלית ================= -->
            <StackPanel Grid.Row="0" Grid.Column="0"
                        VerticalAlignment="Top"
                        Margin="0,0,15,0">
                <!-- כותרת לסינון -->
                <TextBlock Text="סנן לפי סוג קריאה:"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#004A7F"
                           Margin="0,0,0,8"/>
                <ComboBox Width="180"
                          ItemsSource="{StaticResource CallTypesSource}"
                          SelectedItem="{Binding SelectedCallType, Mode=TwoWay}"
                          SelectionChanged="ComboBox_SelectionChanged"
                          Margin="0,0,0,16"/>

                <!-- כותרת למיון -->
                <TextBlock Text="מיין לפי שדה:"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#004A7F"
                           Margin="0,0,0,8"/>
                <ComboBox Width="180"
                          ItemsSource="{StaticResource SortFieldsSource}"
                          SelectedItem="{Binding SelectedSortField, Mode=TwoWay}"
                          SelectionChanged="SortFields_SelectionChanged"/>
            </StackPanel>

            <!-- ================= (B) כותרת וטבלת מתנדבים בעמודה ימנית ================= -->
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <!-- כותרת טבלה -->
                    <RowDefinition Height="Auto"/>
                    <!-- הרשימה עצמה -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- כותרת -->
                <TextBlock Text="מתנדבים ברשימה"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#007ACC"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <!-- ListView עם GridView -->
                <ListView x:Name="lsvVolunteers"
                          Grid.Row="1"
                          ItemsSource="{Binding VolunteerList}"
                          SelectedItem="{Binding SelectedVolunteer, Mode=TwoWay}"
                          MouseDoubleClick="lsvCoursesList_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID"
                                            DisplayMemberBinding="{Binding Id}"
                                            Width="50"/>
                            <GridViewColumn Header="שם"
                                            DisplayMemberBinding="{Binding FullName}"
                                            Width="180"/>
                            <GridViewColumn Header="פעיל"
                                            DisplayMemberBinding="{Binding IsActive}"
                                            Width="60"/>
                            <GridViewColumn Header="קריאות שהושלמו"
                                            DisplayMemberBinding="{Binding TotalCompletedCalls}"
                                            Width="100"/>
                            <GridViewColumn Header="קריאות שבוטלו"
                                            DisplayMemberBinding="{Binding TotalCanceledCalls}"
                                            Width="100"/>
                            <GridViewColumn Header="קריאות שפגו"
                                            DisplayMemberBinding="{Binding TotalExpiredCalls}"
                                            Width="100"/>
                            <GridViewColumn Header="Call ID"
                                            DisplayMemberBinding="{Binding CurrentCallId}"
                                            Width="80"/>
                            <!-- <GridViewColumn Header="סוג קריאה"
                                            DisplayMemberBinding="{Binding CurrentCallId}"
                                            Width="100"/> -->
                            <GridViewColumn Header="מחיקה" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="✖"
                                                MinWidth="40"
                                                Padding="3"
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource MainButtonStyle}"
                                                Click="DeleteButton_Click"
                                                Tag="{Binding Id}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <!-- ================= (C) כפתורים בתחתית ================= -->
            <StackPanel Grid.Row="1" Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button Content="חזרה"
                        Width="100" Height="35"
                        Click="btnBack_Click"
                        Style="{StaticResource MainButtonStyle}"
                        Margin="0,0,8,0"/>
                <Button Content="הוספה"
                        Width="100" Height="35"
                        Click="btnAdd_Click"
                        Style="{StaticResource MainButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
