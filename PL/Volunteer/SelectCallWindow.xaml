<Window x:Class="PL.Volunteer.SelectCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="בחירת קריאה" Height="500" Width="700"
        FlowDirection="RightToLeft" WindowStartupLocation="CenterScreen"
        Background="#DFF6FB">

    <Border BorderBrush="#219EBC" BorderThickness="3" CornerRadius="10" Padding="10" Margin="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- כותרת -->
            <TextBlock Text="בחירת קריאה"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#0077B6"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 10"/>

            <!-- טבלת קריאות פתוחות -->
            <ListView x:Name="lvCalls" Grid.Row="1"
                      Margin="0,10,0,10"
                      BorderBrush="#A7D8F0"
                      BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="מזהה" DisplayMemberBinding="{Binding Id}" Width="60"/>
                        <GridViewColumn Header="סוג קריאה" DisplayMemberBinding="{Binding CallType}" Width="120"/>
                        <GridViewColumn Header="כתובת" DisplayMemberBinding="{Binding FullAddress}" Width="200"/>
                        <GridViewColumn Header="תיאור" DisplayMemberBinding="{Binding Description}" Width="200"/>
                        <GridViewColumn Header="מרחק" DisplayMemberBinding="{Binding DistanceFromVolunteer}" Width="80"/>
                        
                        
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- כפתורים -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnSelect"
                        Content="בחר קריאה"
                        Width="100" Margin="10"
                        Click="btnSelect_Click"
                        Background="#E0F7FA"
                        BorderBrush="#0077B6"
                        Foreground="#0077B6"/>

                <Button x:Name="btnClose"
                        Content="סגור"
                        Width="80" Margin="10"
                        Click="btnClose_Click"
                        Background="#E0F7FA"
                        BorderBrush="#0077B6"
                        Foreground="#0077B6"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
