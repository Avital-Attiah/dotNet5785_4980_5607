<Window x:Class="PL.Volunteer.SelectCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="בחירת קריאה" Height="500" Width="700"
        FlowDirection="RightToLeft" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- טבלת קריאות פתוחות -->
        <ListView x:Name="lvCalls" Grid.Row="0" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="מזהה" DisplayMemberBinding="{Binding Id}" Width="60"/>
                    <GridViewColumn Header="סוג קריאה" DisplayMemberBinding="{Binding CallType}" Width="120"/>
                    <GridViewColumn Header="כתובת" DisplayMemberBinding="{Binding FullAddress}" Width="200"/>
                    <GridViewColumn Header="תיאור" DisplayMemberBinding="{Binding Description}" Width="200"/>
                    <GridViewColumn Header="מרחק" DisplayMemberBinding="{Binding DistanceFromVolunteer}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- כפתורים -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSelect" Content="בחר קריאה" Width="100" Margin="5" Click="btnSelect_Click"/>
            <Button x:Name="btnClose" Content="סגור" Width="80" Margin="5" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
