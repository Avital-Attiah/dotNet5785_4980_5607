<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL.Volunteer"
        Title="Volunteer Details" Height="600" Width="400"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1. Title -->
        <TextBlock Grid.Row="0"
               Text="{Binding ButtonText}"
               FontSize="18"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- 2. Fields -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!-- יצירת שורות בהתאם לשדות ב-BO.Volunteer :contentReference[oaicite:0]{index=0}:contentReference[oaicite:1]{index=1} -->
                <RowDefinition Height="Auto"/>
                <!-- FullName -->
                <RowDefinition Height="Auto"/>
                <!-- Phone -->
                <RowDefinition Height="Auto"/>
                <!-- Email -->
                <RowDefinition Height="Auto"/>
                <!-- Password -->
                <RowDefinition Height="Auto"/>
                <!-- Address -->
                <RowDefinition Height="Auto"/>
                <!-- Latitude -->
                <RowDefinition Height="Auto"/>
                <!-- Longitude -->
                <RowDefinition Height="Auto"/>
                <!-- Role -->
                <RowDefinition Height="Auto"/>
                <!-- IsActive -->
                <RowDefinition Height="Auto"/>
                <!-- MaxCallDistance -->
                <RowDefinition Height="Auto"/>
                <!-- DistanceType -->
                <RowDefinition Height="Auto"/>
                <!-- TotalCompletedCalls -->
                <RowDefinition Height="Auto"/>
                <!-- TotalCanceledCalls -->
                <RowDefinition Height="Auto"/>
                <!-- TotalExpiredCalls -->
                <RowDefinition Height="Auto"/>
                <!-- CurrentCall -->
            </Grid.RowDefinitions>

            <!-- FullName -->
            <Label Grid.Row="0" Grid.Column="0" Content="Name:" Margin="0,5"/>
            <TextBox Grid.Row="0" Grid.Column="1"
               Text="{Binding Volunteer.FullName, Mode=TwoWay}" Margin="0,5"/>

            <!-- Phone -->
            <Label Grid.Row="1" Grid.Column="0" Content="Phone:" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1"
               Text="{Binding Volunteer.Phone, Mode=TwoWay}" Margin="0,5"/>

            <!-- Email -->
            <Label Grid.Row="2" Grid.Column="0" Content="Email:" Margin="0,5"/>
            <TextBox Grid.Row="2" Grid.Column="1"
               Text="{Binding Volunteer.Email, Mode=TwoWay}" Margin="0,5"/>

            <!-- Password -->
            <Label Grid.Row="3" Grid.Column="0" Content="Password:" Margin="0,5"/>
            <TextBox Grid.Row="3" Grid.Column="1"
               Text="{Binding Volunteer.Password, Mode=TwoWay}" Margin="0,5"/>

            <!-- Address -->
            <Label Grid.Row="4" Grid.Column="0" Content="Address:" Margin="0,5"/>
            <TextBox Grid.Row="4" Grid.Column="1"
               Text="{Binding Volunteer.Address, Mode=TwoWay}" Margin="0,5"/>

            <!-- Latitude -->
            <Label Grid.Row="5" Grid.Column="0" Content="Latitude:" Margin="0,5"/>
            <TextBox Grid.Row="5" Grid.Column="1"
               Text="{Binding Volunteer.Latitude, Mode=TwoWay}" Margin="0,5"/>

            <!-- Longitude -->
            <Label Grid.Row="6" Grid.Column="0" Content="Longitude:" Margin="0,5"/>
            <TextBox Grid.Row="6" Grid.Column="1"
               Text="{Binding Volunteer.Longitude, Mode=TwoWay}" Margin="0,5"/>

            <!-- Role -->
            <Label Grid.Row="7" Grid.Column="0" Content="Role:" Margin="0,5"/>
            <ComboBox Grid.Row="7" Grid.Column="1"
                ItemsSource="{Binding Source={StaticResource RolesCollectionKey}}"
                SelectedValue="{Binding Volunteer.Role, Mode=TwoWay}"
                Margin="0,5"/>

            <!-- IsActive -->
            <Label Grid.Row="8" Grid.Column="0" Content="Active:" Margin="0,5"/>
            <CheckBox Grid.Row="8" Grid.Column="1"
                IsChecked="{Binding Volunteer.IsActive, Mode=TwoWay}"
                Margin="0,5"/>

            <!-- MaxCallDistance -->
            <Label Grid.Row="9" Grid.Column="0" Content="Max Distance:" Margin="0,5"/>
            <TextBox Grid.Row="9" Grid.Column="1"
               Text="{Binding Volunteer.MaxCallDistance, Mode=TwoWay}" Margin="0,5"/>

            <!-- DistanceType -->
            <Label Grid.Row="10" Grid.Column="0" Content="Distance Type:" Margin="0,5"/>
            <ComboBox Grid.Row="10" Grid.Column="1"
                ItemsSource="{Binding Source={StaticResource DistanceTypesCollectionKey}}"
                SelectedValue="{Binding Volunteer.DistanceType, Mode=TwoWay}"
                Margin="0,5"/>

            <!-- TotalCompletedCalls (readonly) -->
            <Label Grid.Row="11" Grid.Column="0" Content="Handled:" Margin="0,5"/>
            <TextBlock Grid.Row="11" Grid.Column="1"
                 Text="{Binding Volunteer.TotalCompletedCalls}" Margin="0,5"/>

            <!-- TotalCanceledCalls (readonly) -->
            <Label Grid.Row="12" Grid.Column="0" Content="Canceled:" Margin="0,5"/>
            <TextBlock Grid.Row="12" Grid.Column="1"
                 Text="{Binding Volunteer.TotalCanceledCalls}" Margin="0,5"/>

            <!-- TotalExpiredCalls (readonly) -->
            <Label Grid.Row="13" Grid.Column="0" Content="Expired:" Margin="0,5"/>
            <TextBlock Grid.Row="13" Grid.Column="1"
                 Text="{Binding Volunteer.TotalExpiredCalls}" Margin="0,5"/>

            <!-- CurrentCall (readonly) -->
            <Label Grid.Row="14" Grid.Column="0" Content="Current Call:" Margin="0,5"/>
            <TextBlock Grid.Row="14" Grid.Column="1"
                 Text="{Binding Volunteer.CurrentCall}" Margin="0,5"/>
        </Grid>

        <!-- 3. Add/Update Button -->
        <Button Grid.Row="2"
            Content="{Binding ButtonText}"
            HorizontalAlignment="Center"
            Width="100"
            Margin="0,10,0,0"
            Click="btnAddUpdate_Click"/>
    </Grid>
</Window>
