<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!-- אוסף של BO.CallType לשימוש ב־ComboBox -->
        <local:CallTypesCollection x:Key="CallTypesCollectionKey"/>
        <local:DistanceTypesCollection x:Key="DistanceTypesCollectionKey"/>
        <local:RolesCollection x:Key="RolesCollectionKey"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverterKey"/>
        <!-- עוטף אובייקט יחיד ל־IEnumerable כדי שאפשר יהיה לקשור ל־ItemsControl -->
        <local:SingleToCollectionConverter x:Key="SingleToCollectionConverterKey"/>

        <!-- סגנון כפתור ראשי לכל הפרויקט -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0F0FF"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#004A7F"/>
        </Style>
    </Application.Resources>
</Application>
