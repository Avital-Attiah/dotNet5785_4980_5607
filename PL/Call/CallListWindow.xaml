<Window x:Class="PL.Call.CallListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL.Call"
        Title="Calls List" Height="500" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- כותרת -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- כפתור Back -->
        </Grid.RowDefinitions>

        <!-- כותרת המסך -->
        <TextBlock Text="Calls List"
                   FontSize="20"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Margin="0,0,0,10"/>

        <!-- DataGrid להצגת הקריאות -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding CallList}"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call ID"
                                    Binding="{Binding CallId}"
                                    Width="80"/>
                <DataGridTextColumn Header="Status"
                                    Binding="{Binding Status}"
                                    Width="100"/>
                <DataGridTextColumn Header="Type"
                                    Binding="{Binding CallType}"
                                    Width="100"/>
                <DataGridTextColumn Header="Opened"
                                    Binding="{Binding OpenTime, StringFormat=HH:mm dd/MM/yyyy}"
                                    Width="140"/>
                <DataGridTextColumn Header="Remaining"
                                    Binding="{Binding TimeRemaining}"
                                    Width="100"/>
                <DataGridTextColumn Header="Volunteer"
                                    Binding="{Binding LastAssignedVolunteerName}"
                                    Width="150"/>
                <DataGridTextColumn Header="Assignments"
                                    Binding="{Binding AssignmentsCount}"
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- כפתור חזרה -->
        <Button Grid.Row="2"
                Content="Back"
                Width="100"
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>
    </Grid>
</Window>
