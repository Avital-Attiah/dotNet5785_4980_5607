<Window x:Class="PL.Volunteer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="כניסה למערכת" 
        Height="350" Width="400"
        Background="#E8F6FF"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- מסגרת עגולה עם גבול כחול ורקע לבן -->
    <Border CornerRadius="15"
            BorderBrush="#007ACC"
            BorderThickness="2"
            Background="White"
            Padding="20"
            Margin="20">
        <StackPanel>

            <!-- כותרת עליונה -->
            <TextBlock Text="כניסה למערכת"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#007ACC"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- שדה להזנת תעודת זהות -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="ת.ז:" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="#004A7F"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtUserId"
                         Width="250"
                         Height="30"
                         Padding="5,2"
                         FontSize="14"
                         HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- שדה להזנת סיסמה (אופציונלי) -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                <TextBlock Text="סיסמה:" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="#004A7F"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             Width="250"
                             Height="30"
                             Padding="5,2"
                             FontSize="14"
                             HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- כפתור הכניסה -->
            <Button Content="התחבר"
                    Width="140"
                    Height="40"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MainButtonStyle}"
                    Click="btnLogin_Click"/>

            <!-- הערת מידע אופציונלית -->
            <TextBlock Text="* הזן ת.ז וסיסמה במידת הצורך"
                       FontSize="11"
                       Foreground="#808080"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>

        </StackPanel>
    </Border>
</Window>
