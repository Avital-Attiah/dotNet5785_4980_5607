<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#f0faff">
    <Window.Resources>
        <Style x:Key="BlueButton" TargetType="Button">
            <Setter Property="Background" Value="#e6f2ff"/>
            <Setter Property="Foreground" Value="Navy"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#99ccff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="GrayButton" TargetType="Button">
            <Setter Property="Background" Value="#f5f5f5"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- הגדרת טווח זמן -->
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="טווח סיכון בדקות:" Foreground="DarkBlue" FontWeight="Bold" FontSize="14"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBox Width="60" Text="{Binding RiskRangeMinutes}" 
                         Background="White" BorderBrush="LightSkyBlue" BorderThickness="1" Margin="0,0,5,0"/>
                <Button Content="עדכן" Click="btnUpdateRiskRange_Click" Padding="5,2" Background="#cce6ff" />
            </StackPanel>
            <!-- <TextBlock Text="המספר המקסימלי של שנים ללימוד\nלאחר מכן הסטודנט הופך ללא פעיל"
                       FontSize="12" Foreground="DarkMagenta" Margin="0,5,0,0" TextAlignment="Right"/> -->
        </StackPanel>

        <!-- תצוגת שעה וכפתורים -->
        <Border Grid.Column="1" Grid.Row="1" BorderBrush="DodgerBlue" BorderThickness="2" Padding="20" Margin="10" Background="White" CornerRadius="12">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding CurrentTime, StringFormat=dd/MM/yyyy HH:mm}" FontSize="20" FontWeight="Bold" Foreground="DarkCyan" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                <Button Content="הוסף דקה" Click="advance_minute" Style="{StaticResource BlueButton}" />
                <Button Content="הוסף שעה" Click="advance_hour" Style="{StaticResource BlueButton}" />
                <Button Content="הוסף יום" Click="advance_day" Style="{StaticResource BlueButton}" />
                <Button Content="הוסף שנה" Click="advance_year" Style="{StaticResource BlueButton}" />
            </StackPanel>
        </Border>

        <!-- כפתורי ניהול -->
        <StackPanel Grid.Column="2" Grid.Row="1" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Content="איפוס מסד נתונים" Click="Reset_DB" Style="{StaticResource GrayButton}" />
            <Button Content="אתחול מסד נתונים" Click="Initialize_DB" Style="{StaticResource GrayButton}" />
            <Button Content="רשימת מתנדבים" Click="View_VolunteerList" Style="{StaticResource GrayButton}" />
            <Button Content="רשימת שיחות" Click="View_CallList" Style="{StaticResource GrayButton}" />
        </StackPanel>
    </Grid>
</Window>
